<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div class="row">
        <div class="cgForm">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="campName">Name of Campground</label>
                    <input id="campName" class="form-control" type="text" name="campground[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="campPrice">Cost Per Night</label>
                    <input id="campPrice" class="form-control" type="number" name="campground[price]"
                        placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="campDescription">Description</label>
                    <textarea id="campDescription" class="form-control" type="text" name="campground[description]"
                        placeholder="description" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="campImage">Upload an Image</label>
                    <input id="campImage" type="file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>

</div>
<% include ../partials/footer %>