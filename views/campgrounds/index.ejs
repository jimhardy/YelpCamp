<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
            <h1 class="display-4">Welcome to YelpCamp!</h1>
            <p class="lead">View our hand-picked camp grounds</p>
            <hr class="my-4">
            <p>
                <a class="btn btn-primary btn-lg"  href="/campgrounds/new">Add New Campground</a>
            </p>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card campCard">
                    <div class="card-body">
                        <img class="card-img-top" src="<%=campground.image %>" style="width:100%;">
                        <div class="card-title">
                            <h4><%=campground.name%></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>